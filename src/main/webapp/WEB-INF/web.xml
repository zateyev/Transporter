<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.epam.transporter.servlet.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.epam.transporter.servlet.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.epam.transporter.servlet.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Calculation</servlet-name>
        <servlet-class>com.epam.transporter.servlet.Calculation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Calculation</servlet-name>
        <url-pattern>/calculation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.epam.transporter.servlet.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Book</servlet-name>
        <servlet-class>com.epam.transporter.servlet.Book</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Book</servlet-name>
        <url-pattern>/book</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderStatusChanger</servlet-name>
        <servlet-class>com.epam.transporter.servlet.OrderStatusChanger</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderStatusChanger</servlet-name>
        <url-pattern>/orderStatusChanger</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TruckStatusChanger</servlet-name>
        <servlet-class>com.epam.transporter.servlet.TruckStatusChanger</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TruckStatusChanger</servlet-name>
        <url-pattern>/truckStatusChanger</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TruckAdder</servlet-name>
        <servlet-class>com.epam.transporter.servlet.TruckAdder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TruckAdder</servlet-name>
        <url-pattern>/truckAdder</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <name>5</name>
        </cookie-config>
    </session-config>
</web-app>
